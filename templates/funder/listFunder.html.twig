{% extends 'base.html.twig' %}

{% block title %}
    <h1>List Of funders</h1>
{% endblock %}
{% block section %}
    <section class="section">
        <div class="row">
            <div class="card">
                <div class="card-body">
                    {% if is_granted("ROLE_WORKER") %}
                    <a href="{{ path('funder.add') }}"  class="link-info">
                        <i class="fa-solid fa-square-plus fa-3x p-3"></i>
                    </a>
                    {% endif %}

                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Phone</th>
                            <th scope="col">address</th>
                            <th scope="col">NbrActivities</th>
                            <th scope="col">FunderType</th>
                            {% if is_granted("ROLE_WORKER") %}
                            <th scope="col">Action</th>
                            {% endif %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for funder in listOfFunders %}
                            <tr>
                                <th scope="row">{{ funder.id }}</th>
                                <td>{{ funder.name }}</td>
                                <td>{{ funder.email }}</td>
                                <td>{{ funder.phone }}</td>
                                <td>{{ funder.address }}</td>
                                <td>{{ funder.nbrActivities }}</td>
                                <td>{{ funder.funderType }}</td>
                                {% if is_granted("ROLE_WORKER") %}
                                <td>
                                    <a href="{{ path('funder.update', {id : funder.id}) }}" class="link-warning" style="text-decoration: none">
                                        <i class="fa-solid fa-user-pen"></i>
                                    </a>

                                    <a href="{{ path('funder.delete', {id : funder.id}) }}"
                                       onclick="return confirm('you will delete this funder');"
                                       class="link-danger" style="text-decoration: none">
                                        <i class="fa-solid fa-user-xmark"></i>
                                    </a>
                                </td>
                                {% endif %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>
        </div>
    </section>
{% endblock %}

